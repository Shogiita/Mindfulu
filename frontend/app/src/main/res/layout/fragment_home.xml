<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="16dp"
    tools:context=".ui.HomeFragment">

    <!-- Your Mood Today Section -->
    <TextView
        android:id="@+id/tvYourMoodTodayHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Your Mood Today"
        android:textColor="@color/white_text"
        android:textSize="36sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMoodEmoji"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/happy"
        android:contentDescription="Mood Emoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvYourMoodTodayHeader" />

    <!-- Separator -->
    <View
        android:id="@+id/mood_section_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white_line"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivMoodEmoji"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Music Suggestion Header -->
    <TextView
        android:id="@+id/tvMusicSuggestionHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saran Musik untuk Mood Anda"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black_text"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/mood_section_separator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Music Suggestion Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardMusicSuggestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:contentPadding="16dp"
        app:cardBackgroundColor="@color/card_background"
        app:layout_constraintTop_toBottomOf="@+id/tvMusicSuggestionHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvMusicTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul:"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMusicTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Judul Lagu Contoh"
                android:textColor="@color/black_text"
                app:layout_constraintTop_toTopOf="@+id/tvMusicTitleLabel"
                app:layout_constraintStart_toEndOf="@+id/tvMusicTitleLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvMusicArtistLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artis:"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMusicTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMusicArtist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nama Artis Contoh"
                android:textColor="@color/black_text"
                app:layout_constraintTop_toTopOf="@+id/tvMusicArtistLabel"
                app:layout_constraintStart_toEndOf="@+id/tvMusicArtistLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvMusicReasonLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alasan:"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMusicArtist"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvMusicReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Alasan mengapa lagu ini cocok dengan mood Anda."
                android:textColor="@color/black_text"
                app:layout_constraintTop_toTopOf="@+id/tvMusicReasonLabel"
                app:layout_constraintStart_toEndOf="@+id/tvMusicReasonLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnPlayMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putar Musik"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/button_primary"
                android:textColor="@color/white_text"
                android:elevation="4dp"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvMusicReason"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Activity Suggestion Header -->
    <TextView
        android:id="@+id/tvActivitySuggestionHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saran Kegiatan untuk Anda"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black_text"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/cardMusicSuggestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView for Activity Suggestions -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvActivities"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvActivitySuggestionHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_activity_suggestion" />

</androidx.constraintlayout.widget.ConstraintLayout>
