<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.HomeFragment">

        <TextView
            android:id="@+id/tvMusicSuggestionHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saran Musik untuk Mood Anda"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMusicSuggestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:contentPadding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvMusicSuggestionHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvMusicTitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul:"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvMusicTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Judul Lagu Contoh"
                    android:textColor="?android:attr/textColorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/tvMusicTitleLabel"
                    app:layout_constraintStart_toEndOf="@+id/tvMusicTitleLabel"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvMusicArtistLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artis:"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMusicTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvMusicArtist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Nama Artis Contoh"
                    app:layout_constraintTop_toTopOf="@+id/tvMusicArtistLabel"
                    app:layout_constraintStart_toEndOf="@+id/tvMusicArtistLabel"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvMusicReasonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alasan:"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMusicArtist"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tvMusicReason"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Alasan mengapa lagu ini cocok dengan mood Anda."
                    app:layout_constraintTop_toTopOf="@+id/tvMusicReasonLabel"
                    app:layout_constraintStart_toEndOf="@+id/tvMusicReasonLabel"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:id="@+id/btnPlayMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Putar Musik"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvMusicReason"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvActivitySuggestionHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saran Kegiatan untuk Anda"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/cardMusicSuggestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivities"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvActivitySuggestionHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_activity_suggestion" /> </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
